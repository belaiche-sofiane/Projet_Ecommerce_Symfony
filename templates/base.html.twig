<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue !
			{% endblock %}
		</title>
		{% block stylesheets %}
		<link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css"> 
				<link rel="stylesheet" type="text/css" href="assets/css/style.css"> 

		
		{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<a class="navbar-brand" href="{{path('readme')}}">SymfonyShoper</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor02">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" href="{{path('home')}}">Home
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('produits')}}">Produits</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('categories')}}">Catégories</a>
						</li>
						{% if  not app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('inscription')}}">S'inscrire</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_login')}}">Se connecter</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('deconnexion')}}">Se déconnecter</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('cart')}}">Mon panier</a>
							</li>
						{% endif %}
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="/admin">Administration</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</nav>


			<div class="container">
			 {% block body %}
			{% block javascripts %}{% endblock %}
				</div>
			</body>
		</html>
{% endblock %}
