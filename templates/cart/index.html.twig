{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>
		Votre panier
	</h1>
	{% if items | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantité</th>
					<th>Total</th>
					<th>Enlever</th>
				</tr>
			</thead>


			<tbody>
				{% for item in items %}
					<tr>
						<td>{{item.produit.brand}}
							{{item.produit.model}}</td>
						<td>{{item.produit.price}}€</td>
						<td>{{item.quantity}}</td>
						<td>{{item.produit.price * item.quantity }}€</td>
						<td>
							<a href="{{path('cart_remove',{'id': item.produit.id})}}">
								<button type="button" class="btn btn-danger btn-sm">Supprimer</button>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right" > <strong>Total : </strong>   </td>
                    <td>{{total}}€</td>
                    <td class="text-right"><button type="button" class="btn btn-outline-success btn-sm btn-md btn-block"><a href="{{path('cart_validate')}}">Payer</a></button></td>
                </tr>
            </tfoot>
		</table>      



	{% else %}

		<p>Votre panier est vide</p>
		<p>Faites un tour dans notre liste de produits par
			<a href="{{path('produits')}}">ici</a>

		{% endif %}


	{% endblock %}
