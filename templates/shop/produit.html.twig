

{% extends 'base.html.twig' %}
{% block title %}{{produit.brand}} {{produit.model}}
{% endblock %}

{% block body %}

<!--Main layout-->
<main class="mt-5 pt-4">
  <div class="container dark-grey-text mt-5">
    <!--Grid row-->
    <div class="row wow fadeIn">
      <!--Grid column-->
      <div class="col-md-6 mb-4">
        <img src="{{ produit.image }}" class="img-fluid" alt="" />
      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-6 mb-4">
        <!--Content-->
        <div class="p-4">
          <div class="mb-3">
            <a href="">
              <span class="badge purple mr-1"
                >Cat√©gorie: {{ produit.category }}</span
              >
            </a>
          </div>
          <p class="lead">
            <span class="lead font-weight-bold mr-1"> {{ produit.brand }} {{ produit.model}} </span>
          </p>

          <p class="lead">
            <span class="mr-1"> Prix: {{ produit.price }} </span>
          </p>

          <p class="lead font-weight-bold">Description</p>

          <p>
            {{ produit.description }}
          </p>

          <form class="d-flex justify-content-left">
            <!-- Default input -->
{% if app.user %}
  

            <button
              class="btn btn-dark btn-lg btn-block btn-md my-0 p"
              type="submit"
            >
            <a href="{{path('cart_add', {'id': produit.id })}}">Ajouter au panier</a>
              
              <i class="fas fa-shopping-cart ml-1"></i>
            </button>
            {% endif %}
          </form>
        </div>
        <!--Content-->
      </div>
      <!--Grid column-->
    </div>
    <!--Grid row-->

    <hr />
  </div>
</main>
{% endblock %}
